{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "ApimServiceName": {
      "type": "string"
    },
    "PolicyXMLSasToken": {
      "type": "string"
    },
    "PolicyXMLBaseUrl": {
      "type": "string"
    }
  },
  "resources": [
    {
      "properties": {
        "description": "Product used for Mercury Health Development Teams",
        "terms": "These are the terms of use ...",
        "subscriptionRequired": true,
        "approvalRequired": false,
        "subscriptionsLimit": 1,
        "state": "published",
        "displayName": "Mercury Health - Developers"
      },
      "name": "[concat(parameters('ApimServiceName'), '/development')]",
      "type": "Microsoft.ApiManagement/service/products",
      "apiVersion": "2021-01-01-preview"
    },
    {
      "properties": {
        "description": "Administrators is a built-in group containing the admin email account provided at the time of service creation. Its membership is managed by the system.",
        "displayName": "Administrators",
        "type": "system",
        "builtIn": true
      },
      "name": "[concat(parameters('ApimServiceName'), '/development/administrators')]",
      "type": "Microsoft.ApiManagement/service/products/groups",
      "apiVersion": "2021-01-01-preview",
      "dependsOn": [
        "[resourceId('Microsoft.ApiManagement/service/products', parameters('ApimServiceName'), 'development')]"
      ]
    },
    {
      "properties": {
        "value": "[concat(parameters('PolicyXMLBaseUrl'), '/development-productPolicy.xml', parameters('PolicyXMLSasToken'))]",
        "format": "rawxml-link"
      },
      "name": "[concat(parameters('ApimServiceName'), '/development/policy')]",
      "type": "Microsoft.ApiManagement/service/products/policies",
      "apiVersion": "2021-01-01-preview",
      "dependsOn": [
        "[resourceId('Microsoft.ApiManagement/service/products', parameters('ApimServiceName'), 'development')]"
      ]
    }
  ]
}