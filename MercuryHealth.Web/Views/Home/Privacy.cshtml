@model MercuryHealth.Web.Models.PrivacyModel

@{
    ViewData["Title"] = "Privacy Policy";
}
<h1>@ViewData["Title"]</h1>

@* Check for Feature Flag *@
<feature name="PrivacyBeta">
    <p>Use this page to detail your site's privacy policy.</p>
    <p>This is the new Beta privacy policy and here is my title: @Model.Name</p>
    <br />
    <div style="font-size: 14px;">from App Config - Website_FontName: <b>@ViewData["Website_FontName"]</b></div>
    <div style="font-size: 14px;">from App Config - Website_FontColor: <b>@ViewData["Website_FontColor"]</b></div>
    <div style="font-size: 14px;">from App Config - Website_FontSize: <b>@ViewData["Website_FontSize"]</b></div>
</feature>

@* Check for Feature Flag *@
<feature name="PrivacyBeta" negate="true">
    <p>Use this page to detail your site's privacy policy.</p>
    <br />
    <div style="font-size: 14px;">from App Config - Website_FontName: <b>@ViewData["Website_FontName"]</b></div>
    <div style="font-size: 14px;">from App Config - Website_FontColor: <b>@ViewData["Website_FontColor"]</b></div>
    <div style="font-size: 14px;">from App Config - Website_FontSize: <b>@ViewData["Website_FontSize"]</b></div>

</feature>
