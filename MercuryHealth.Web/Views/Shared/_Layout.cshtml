<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mercury Health</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MercuryHealth.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Mercury Health</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" id="menu_home" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" id="menu_nutrition" asp-area="" asp-controller="Nutritions" asp-action="Index">Nutrition</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" id="menu_exercises" asp-area="" asp-controller="Exercises" asp-action="Index">Exercises</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" id="menu_privacy" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        @* Check for Feature Flag  *@
                         <feature name="MetricsDashboard">
                            <li class="nav-item">
                                <a class="nav-link text-dark" id="menu_metrics" asp-area="" asp-controller="Home" asp-action="Metrics">Metrics</a>
                            </li>
                        </feature>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
@*            &copy; 2022 - Mercury Health - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>*@
           &copy; Copyright @DateTime.Now.Year | <img src="~/css/heart-rate-monitor-black-2.png" alt="" height="26" width="41">Mercury Health is powered by @System.Runtime.InteropServices.RuntimeInformation.FrameworkDescription | Build @MyAppVersion.GetAssemblyVersion() | @MyAppVersion.GetDateTimeFromVersion() | <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
