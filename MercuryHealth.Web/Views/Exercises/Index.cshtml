@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@model IEnumerable<MercuryHealth.Web.Models.ExercisesViewModel>

@{
    ViewData["Title"] = "Exercises";
}

<h1>Exercises</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table"  style="font-size: @Configuration["MercuryHealth:Settings:FontSize"]px;">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExerciseTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MusclesInvolved)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Equipment)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td style="color:@item.FontColor">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td style="color:@item.FontColor">
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td style="color:@item.FontColor">
                @Html.DisplayFor(modelItem => item.ExerciseTime)
            </td>
            <td style="color:@item.FontColor">
                @Html.DisplayFor(modelItem => item.MusclesInvolved)
            </td>
            <td style="color:@item.FontColor">
                @Html.DisplayFor(modelItem => item.Equipment)
            </td>
            <td>
                <a asp-action="Edit" id="button_edit_@item.Id" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" id="button_details_@item.Id" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" id="button_delete_@item.Id" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
